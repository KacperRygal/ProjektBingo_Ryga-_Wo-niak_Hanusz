<Window x:Class="Bingo.SoloChoose"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bingo"
        mc:Ignorable="d"
        Title="SoloChoose" Height="450" Width="800">
    <Grid>
        <Button x:Name="btnStart" Content="Start" HorizontalAlignment="Left" Margin="222,360,0,0" VerticalAlignment="Top" Height="64" Width="154" Click="btnStart_Click"/>
        <Button x:Name="btnBack" Content="Wróć" HorizontalAlignment="Left" Margin="503,360,0,0" VerticalAlignment="Top" Height="64" Width="127"/>
        <ListBox x:Name="lstGameType" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="170,34,170,328" SelectionChanged="lstGameType_SelectionChanged"/>
        <ListBox x:Name="lstBoardSize" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="170,135,170,227" SelectionChanged="lstBoardSize_SelectionChanged"/>
        <ListBox x:Name="lstCategory" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="170,237,170,125" SelectionChanged="lstCategory_SelectionChanged"/>

    </Grid>
</Window>
